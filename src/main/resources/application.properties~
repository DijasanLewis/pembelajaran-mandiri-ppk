spring.application.name=PembelajaranMandiriPPK

# Koneksi Database MySQL
spring.datasource.url=jdbc:mysql://localhost:3306/PembelajaranMandiriPPK
spring.datasource.username=root
spring.datasource.password=
spring.jpa.hibernate.ddl-auto=update  # Opsi ini membuat/mengupdate tabel secara otomatis berdasarkan Entity
spring.jpa.show-sql=true  # Menampilkan query SQL di konsol

# Konfigurasi JWT
jwt.secret=mysecretkey  # Kunci rahasia untuk tanda tangan token JWT
jwt.expiration=86400000  # Durasi token (ms) - 24 jam
